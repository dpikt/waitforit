doctype html
html
  head
    title Wait For it
        //- link(rel="shortcut icon" type="image/x-icon" href="/images/favicon.png")

    script(src="https://code.jquery.com/jquery-1.11.3.min.js")
    script(src="/scripts/main.js")
    link(rel="stylesheet" type="text/css" href="/styles/normalize.css")
    link(rel="stylesheet" type="text/css" href="/styles/skeleton.css")
    link(rel="stylesheet" type="text/css" href="/styles/pikaday.css")
    link(rel="stylesheet" type="text/css" href="/styles/main.css")
    link(href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css")
  body
    div(class="container")
        h1 Wait For It!
        h3(class="subtitle") a two-tiered password defense system
        div(class="row")
            div(class="six columns offset-by-three" id="main-box")
                p.tagline Wait For It is a tool for encrypting files from yourself.
                p.lefty Simply enter your email and choose a date - you'll receive a password that you can use later to decrypt your files. #[a(href="#") Learn more]
                form(onkeypress="return event.keyCode != 13;")
                    div(class="row")
                        div(class="twelve columns")
                            label(for="emailInput") Email
                            input#emailInput(class="u-full-width" type="text" placeholder="email")
                    div(class="row")
                        div(class="twelve columns")
                            p Send me my password in:
                    div(class="row")
                        div(class="four columns")
                            label(for="yearInput") Years
                            input#yearInput(class="u-full-width" type="number" placeholder="0")
                        div(class="four columns")
                            label(for="monthInput") Months
                            input#monthInput(class="u-full-width" type="number" placeholder="0")
                        div(class="four columns")
                            label(for="dayInput") Days
                            input#dayInput(class="u-full-width" type="number" placeholder="0")
                    div(class="row")
                        div(class="twelve columns")
                            a#date-toggle(href="#")
                                p Or, choose a date
                    div(class="row")
                        div(class="twelve columns")
                            form
                                input#picker-field(type="date")
                    div(class="row")
                        div(class="twelve columns")
                            button#generateButton(class="button button-primary") Generate Password
                //- div#password-section
                //-     div#password-view
                //-     div#copy-pass Copy
                //-     div#show-pass Toggle
                p#error-flash
        div(class="row centered footer")
            div(class="twelve columns")
                p Â© David Pickart 2016 | Built with #[a(href="http://getskeleton.com") Skeleton]


    script(src="/scripts/pikaday.js")


